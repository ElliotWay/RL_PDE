# simple inputs files for the unsplit CTU hydro scheme

[driver]
max_steps = 2000
tmax = 10000.0
cfl = 0.8


[io]
basename = lm_gresho_128_
n_out = 1


[mesh]
nx = 128
ny = 128
xmax = 1.0
ymax = 1.0

xlboundary = periodic
xrboundary = periodic

ylboundary = periodic
yrboundary = periodic


[gresho]
r = 0.2
u0 = 0.1
p0 = 1

[compressible]
grav = 0
